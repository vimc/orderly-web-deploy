#!/usr/bin/env bash
set -e

GIT_ID=$(git rev-parse --short=7 HEAD)
if [ -z "$TRAVIS_BRANCH" ]; then
    GIT_BRANCH=$(git symbolic-ref --short HEAD)
else
    GIT_BRANCH="$TRAVIS_BRANCH"
fi

REGISTRY=docker.montagu.dide.ic.ac.uk:5000
NAME=orderly-web-proxy
PUBLIC_REGISTRY=vimc

APP_DOCKER_TAG=$REGISTRY/$NAME
APP_DOCKER_COMMIT_TAG=$REGISTRY/$NAME:$GIT_ID
APP_DOCKER_BRANCH_TAG=$REGISTRY/$NAME:$GIT_BRANCH

APP_PUBLIC_COMMIT_TAG=$PUBLIC_REGISTRY/$NAME:$GIT_ID
APP_PUBLIC_BRANCH_TAG=$PUBLIC_REGISTRY/$NAME:$GIT_BRANCH
